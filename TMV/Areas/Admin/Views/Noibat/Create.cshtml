<div class="row">
    <!-- left column -->
    <div class="col-md-12 col-md-offset-0">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin nổi bật</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Noibat", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TENHINH_VIDEO)
                        @Html.TextBoxFor(model => model.TENHINH_VIDEO, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TENHINH_VIDEO, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group" >
                        @Html.LabelFor(model => model.LOAI)
                        <select class="form-control" data-val="true" id="LOAI" name="LOAI" onchange="genderChanged()" ondurationchange="">
                            <option selected="selected" id="2" value="2" name="2">Video</option>
                            <option id="1" value="1" name="2">Hình Ảnh</option>
                        </select>
                    </div>
                    <script type="text/javascript">
                        function genderChanged() {
                            var x = document.getElementById("LOAI").value;
                            if (x == 1) {
                                var p = document.createElement("p");
                                p.innerHTML = '<input type="file" name="fileUpLoad" id="file" />';

                                var parent = document.getElementById("loai");
                                var child = document.getElementById("txtContent");
                                //child.insertAdjacentHTML = ('afterend', '<input type="File" name="fileUpLoad"/>');
                                //parent.removeChild(child);
                                parent.replaceChild(p, child);
                                //p.removeChild(child);
                                //parent.insertAdjacentHTML = ('afterend', '<input type="File" name="fileUpLoad"/>');
                                //p.insertAdjacentHTML = ('afterbegin', '<div class="form-group">@Html.LabelFor(model => model.HINHANH_VIDEO)<input type="file" name="fileUpLoad" /></div>');
                            }
                            @*if(x==2) {
                                var p = document.createElement("p");
                                p.innerHTML = '@Html.TextAreaFor(model => model.HINHANH_VIDEO, new { @class = "form-control", @id = "txtContent" })';
                                var parent = document.getElementById("loai");
                                var child = document.getElementById("file");
                                parent.replaceChild(p, child);
                            }*@
                        };
                    </script>
                    <div class="form-group" id = "loai">
                        @Html.LabelFor(model => model.HINHANH_VIDEO)
                        @Html.TextAreaFor(model => model.HINHANH_VIDEO, new { @class = "form-control", @id = "txtContent" })
                        @Html.ValidationMessageFor(model => model.HINHANH_VIDEO, "", new { @class = "text-danger" })
                    </div>
                    @*<div class="form-group">
                        @Html.LabelFor(model => model.HINHANH_VIDEO)
                        <input type="file" name="fileUpLoad" />
                    </div>*@

                    <div class="form-group">
                        @Html.LabelFor(model => model.TRANG_THAI)
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.TRANG_THAI)
                                Kích hoạt
                            </label>
                            @Html.ValidationMessageFor(model => model.TRANG_THAI, "", new { @class = "text-danger" })
                        </div>
                    </div>
            </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-default col-md-offset-1" })
                </div>
            }
        </div>
        <!-- /.box -->
    </div>
</div>