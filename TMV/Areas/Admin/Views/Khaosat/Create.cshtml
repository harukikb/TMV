@model Model.EF.APP_KHAOSAT

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <h1>Thêm mới giới thiệu</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
        <li><a href="/Admin/Gioithieu">Khảo Sát</a></li>
        <li class="active">Thêm mới</li>
    </ol>
}
@section Script_footer{
    <script>

        var editor = CKEDITOR.replace("txtContent", {
            customConfig: '/assets/admin/plugins/ckeditor/config.js',
        });
    </script>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12 col-md-offset-0">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin khảo sát</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Khaosat", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NOIDUNG_KHAOSAT)
                        @Html.TextBoxFor(model => model.NOIDUNG_KHAOSAT, new { @class = "form-control",@id= "txtContent" })
                        @Html.ValidationMessageFor(model => model.NOIDUNG_KHAOSAT, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PHUONGAN_1)
                        @Html.TextBoxFor(model => model.PHUONGAN_1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PHUONGAN_1, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PHUONGAN_2)
                        @Html.TextBoxFor(model => model.PHUONGAN_2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PHUONGAN_2, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PHUONGAN_3)
                        @Html.TextBoxFor(model => model.PHUONGAN_3, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PHUONGAN_3, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TRA_LOI)
                        @Html.TextBoxFor(model => model.TRA_LOI, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TRA_LOI, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TRANG_THAI)
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.TRANG_THAI)
                                Kích hoạt
                            </label>
                            @Html.ValidationMessageFor(model => model.TRANG_THAI, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-default col-md-offset-1" })
                </div>
            }
        </div>
        <!-- /.box -->
    </div>
</div>

