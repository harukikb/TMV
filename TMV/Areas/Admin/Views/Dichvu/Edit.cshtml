@model Model.EF.DM_DICHVU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <h1>Cập nhật thông tin dịch vụ</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
        <li><a href="/Admin/APP_KHUYENMAI">Dịch vụ</a></li>
        <li class="active">Cập nhật</li>
    </ol>
}

@section Script_footer{
    <script>

        var editor = CKEDITOR.replace("txtContent", {
            customConfig: '/assets/admin/plugins/ckeditor/config.js',
        });
    </script>
}
<div class="row">
    <!-- left column -->
    <div class="col-md-12 col-md-offset-0">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin sản phẩm</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Edit", "Product", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MA_DICHVU)
                @Html.HiddenFor(model => model.HINH_ANH)
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TEN_DICHVU)
                        @Html.TextBoxFor(model => model.TEN_DICHVU, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TEN_DICHVU, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HINH_ANH)
                        <div>
                            <img src="@Html.DisplayFor(model=>model.HINH_ANH)" width="100%" />
                        </div>
                        @Html.TextBoxFor(model => model.HINH_ANH, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HINH_ANH, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MOTA_CHITIET)
                        @Html.TextAreaFor(model => model.MOTA_CHITIET, new { @class = "form-control", @id = "txtContent" })
                        @Html.ValidationMessageFor(model => model.MOTA_CHITIET, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GIA_DICHVU)
                        @Html.TextBoxFor(model => model.GIA_DICHVU, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GIA_DICHVU, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.GIA_KHUYENMAI)
                        @Html.TextBoxFor(model => model.GIA_KHUYENMAI, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GIA_KHUYENMAI, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.THOIGIAN_LAMVIEC)
                        @Html.TextBoxFor(model => model.THOIGIAN_LAMVIEC, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.THOIGIAN_LAMVIEC, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NGUNG_KINHDOANH)
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.NGUNG_KINHDOANH)
                                Kích hoạt
                            </label>
                            @Html.ValidationMessageFor(model => model.NGUNG_KINHDOANH, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MA_LOAIDV)
                        @Html.DropDownListFor(model => model.MA_LOAIDV, ViewBag.CategoryID as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MA_LOAIDV, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-default col-md-offset-1" })
                </div>
            }
        </div>
    </div>
</div>