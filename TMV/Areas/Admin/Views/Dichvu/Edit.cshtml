@model Model.EF.DM_DICHVU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <h1>Cập nhật thông tin dịch vụ</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
        <li><a href="/Admin/APP_KHUYENMAI">Dịch vụ</a></li>
        <li class="active">Cập nhật</li>
    </ol>
}

@section Script_footer{
    <script>
        var editor = CKEDITOR.replace("txtContent", {
            customConfig: '/Assets/admin/plugins/ckfinder/config.js',
        });
    </script>
    <script src="~/Assets/admin/js/JSEditDVView.js"></script>
}
<div class="row">
    <!-- left column -->
    <div class="col-md-12 col-md-offset-0">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin sản phẩm</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Edit", "Dichvu", FormMethod.Post, new { @enctype = "multipart/form-data", @runat = "server" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @*@Html.HiddenFor(model => model.MA_DICHVU);
                @Html.HiddenFor(model => model.TEN_DICHVU);
                @Html.HiddenFor(model => model.DM_LOAIDV);
                @Html.HiddenFor(model => model.GIA_DICHVU);
                @Html.HiddenFor(model => model.GIA_KHUYENMAI);
                @Html.HiddenFor(model => model.THOIGIAN_LAMVIEC);
                @Html.HiddenFor(model => model.THU_TU);
                @Html.HiddenFor(model => model.MODIFIED);
                @Html.HiddenFor(model => model.NGUNG_KINHDOANH);*@
                <p id="hidden"></p>
                <div class="box-body">
                    <div class="form-group">
                        <label for="MA_NHOMDV">Nhóm dịch vụ</label>
                        <select class="form-control" data-val="true" id="MA_NHOMDV" name="TEN_NHOMDV">
                            <option selected="selected">Chọn nhóm dịch vụ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="MA_LOAIDV">Loại dịch vụ</label>
                        <select class="form-control" data-val="true" id="MA_LOAIDV" name="TEN_LOAIDV">
                            <option selected="selected">Chọn loại dịch vụ</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.MA_LOAIDV, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="MA_DICHVU">Tên dịch vụ</label>
                        <select class="form-control" data-val="true" id="MA_DICHVU" name="TEN_DICHVU">
                            <option selected="selected">Chọn dịch vụ</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.MA_DICHVU, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HINH_ANH)
                        <input type="file" name="fileUpLoad" />
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MOTA_CHITIET)
                        @Html.TextAreaFor(model => model.MOTA_CHITIET, new { @class = "form-control", @id = "txtContent" })
                        @Html.ValidationMessageFor(model => model.MOTA_CHITIET, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    @*<input type="button" class="btn-luu" id="luu" value="Lưu" />*@
                    @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-default col-md-offset-1" })
                </div>
            }
        </div>
    </div>
</div>
